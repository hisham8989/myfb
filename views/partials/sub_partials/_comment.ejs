<li id="comment-<%=comment._id%>">
  <p>
    <%=comment.content%> <br />
    <small>commented by <sub><%=comment.user.name%></sub></small>
    <br />
    <% if(locals.user && (locals.user.id == comment.user.id)){%>
    <small>
      <a class="delete-comment-btn" href="/comments/destroy/<%=comment.id%>"
        ><span style="font-size: larger">&#9940;</span> delete</a
      >
    </small>
    <%} %>
    <!-- Likes Toggler -->
    <small>
      <% if (locals.user) { %>
      <a
        class="toggle-like-button"
        data-likes="<%=comment.likes.length %>"
        href="/likes/toggle/?id=<%=comment._id%>&type=Post"
        ><%= comment.likes.length %> 👍</a
      >
      <% } else { %> <%= comment.likes.length %> 👍 <% } %>
    </small>
  </p>
</li>
